{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": false,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "@types",
      "../../typings",
    ]
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "**/*.theme.tsx",
    "**/*.png",
    "../../typings",
    "../ui-engine/typings",
  ],
  "references": [
    {
      "path": "../ui-engine"
    }
  ]
}